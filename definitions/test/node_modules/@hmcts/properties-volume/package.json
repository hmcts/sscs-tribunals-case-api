{
  "name": "@hmcts/properties-volume",
  "version": "1.2.0",
  "description": "Azure key-vault flex volume to express properties integration",
  "license": "MIT",
  "repository": "https://github.com/hmcts/properties-volume-nodejs",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "lint": "tsc --noEmit && eslint ./src --ext .js,.ts",
    "prettier": "prettier --write \"**/*.{js,ts,json}\"",
    "prebuildOnly": "yarn clean && yarn format && yarn lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "yarn build --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "@azure/identity": "^4.2.1",
    "@azure/keyvault-secrets": "^4.7.0",
    "@hmcts/nodejs-logging": "^4.0.4",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/config": "^3.3.3",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.8",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "config": "^3.3.12",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.3.1"
}