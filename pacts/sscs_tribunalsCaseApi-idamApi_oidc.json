{
  "provider": {
    "name": "idamApi_oidc"
  },
  "consumer": {
    "name": "sscs_tribunalsCaseApi"
  },
  "interactions": [
    {
      "description": "Provider receives a POST /o/token request from SSCS Tribunals API",
      "request": {
        "method": "POST",
        "path": "/o/token",
        "headers": {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        "body": "redirect_uri=http%3A%2F%2Fwww.dummy-pact-service.com%2Fcallback&client_id=sscs&grant_type=password&username=system.update@hmcts.net&password=Pa55word11&client_secret=QM5RQQ53LZFOSIXJ&scope=openid profile roles"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "access_token": "eyJ0eXAiOiJKV1QiLCJraWQiOiJiL082T3ZWdjEre",
          "scope": "openid roles profile"
        },
        "matchingRules": {
          "body": {
            "$.access_token": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.scope": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "a token is requested"
        }
      ]
    },
    {
      "description": "A request for a UserInfo from SSCS Tribunals API",
      "request": {
        "method": "GET",
        "path": "/o/userinfo",
        "headers": {
          "Authorization": "Bearer UserAuthToken"
        },
        "matchingRules": {
          "header": {
            "Authorization": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "Bearer UserAuthToken"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "sub": "61",
          "uid": "sscs-citizen2@hmcts.net",
          "givenName": "Test",
          "familyName": "User",
          "roles": [
            "citizen"
          ]
        },
        "matchingRules": {
          "body": {
            "$.sub": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.uid": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.givenName": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.familyName": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.roles": {
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ],
              "combine": "AND"
            },
            "$.roles[*]": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "userinfo is requested"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.1.7"
    }
  }
}
